{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/common-modules": [
        "libs/common-modules/src"
      ],
      "@app/common-modules/*": [
        "libs/common-modules/src/*"
      ],
      "@app/game": [
        "libs/game/src"
      ],
      "@app/game/*": [
        "libs/game/src/*"
      ]
    }
  }
}